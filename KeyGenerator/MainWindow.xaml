<Window x:Class="KeyGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="653" Width="463"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" MouseDown="Window_MouseDown" FontFamily="Microsoft YaHei UI">

    <Border CornerRadius="10" Background="#171717" BorderBrush="#2E2F2F" BorderThickness="2" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <Button x:Name = "GenerateButton" Content="Generate Key" HorizontalAlignment="Left" Margin="16,567,0,0" VerticalAlignment="Top" Width="322" Click="Button_Click" Height="45" FontWeight="Medium"/>
            <TextBox x:Name = "PasswordResultsTextBox" HorizontalAlignment="Center" Margin="0,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="407" Height="272" TextChanged="TextBox_TextChanged" IsReadOnly="True"/>
            <CheckBox x:Name = "IncludeLowercase" Content="Include lowercase letters (a-z)" HorizontalAlignment="Left" Margin="240,182,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.075,-0.536" Checked="CheckBox_Checked" Height="20" Width="176" FontSize="10" Foreground="White" Background="#FF141414" BorderBrush="#FF434343"/>
            <CheckBox x:Name = "IncludeUppercase" Content="Include uppercase letters (A-Z)" HorizontalAlignment="Left" Margin="16,182,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.075,-0.536" Height="20" Width="182" FontSize="10" Foreground="White" Background="#FF141414" BorderBrush="#FF434343"/>
            <CheckBox x:Name = "IncludeNumbers" Content="Include numbers (0-9)" HorizontalAlignment="Left" Margin="240,212,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.075,-0.536" Height="20" Width="138" FontSize="10" Foreground="White" Background="#FF141414" BorderBrush="#FF434343"/>
            <CheckBox x:Name = "IncludeSpecial" Content="Include special characters (!@#$%)" HorizontalAlignment="Left" Margin="16,212,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.075,-0.536" Checked="IncludeSpecial_Checked" Height="20" Width="204" FontSize="10" Foreground="White" Background="#FF141414" BorderBrush="#FF434343"/>
            <TextBox x:Name = "CountTextBox" HorizontalAlignment="Left" Margin="350,567,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="73" Height="45" TextChanged="TextBox_TextChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="#FF434343" Background="#FF212121"/>
            <TextBox x:Name = "FormatBoxTextBox" HorizontalAlignment="Center" Margin="0,130,0,0" TextWrapping="Wrap" Text="XXXX-XXXX-XXXX-XXXX" VerticalAlignment="Top" Width="407" Height="38" TextChanged="TextBox_TextChanged" Foreground="White" VerticalContentAlignment="Center"/>
            <TextBlock HorizontalAlignment="Left" Margin="16,23,0,0" TextWrapping="Wrap" Text="Universal Key Generator" VerticalAlignment="Top" FontSize="15" Cursor="ArrowCD" Foreground="White"/>
            <TextBlock HorizontalAlignment="Left" Margin="16,52,0,0" TextWrapping="Wrap" Text="Educational project for learning how key generation works." VerticalAlignment="Top" Width="271" Foreground="#FF929292"/>
            <TextBlock HorizontalAlignment="Left" Margin="16,112,0,0" TextWrapping="Wrap" Text="Key format (XXXX-XXXX-XXXX-XXXX)" VerticalAlignment="Top" Width="271" FontSize="10" Foreground="#FF929292"/>
            <TextBlock HorizontalAlignment="Left" Margin="16,259,0,0" TextWrapping="Wrap" Text="Results" VerticalAlignment="Top" Width="271" FontSize="10" Foreground="#FF929292"/>
            <Button Content="🗙" HorizontalAlignment="Left" Margin="398,19,0,0" VerticalAlignment="Top" Height="31" Click="Button_Click_1" Width="31" BorderBrush="#FF212121" Background="#FF212121" Foreground="#FF6B6B6B"/>
        </Grid>
    </Border>

</Window>
